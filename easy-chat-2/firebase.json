{
  "hosting": {
    "public": "./",
    "ignore": [
      "firebase.json",
      "database-rules.json",
      "storage.rules",
      "functions"
    ],
    "headers": [{
      "source" : "**/*.@(js|html)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }],
    "redirects": [{
      "source": "/index.html",
      "destination": "/",
      "type": 301
    },
    {
      "source": "/login",
      "destination": "/login.html",
      "type": 301
    }]
  }
}
